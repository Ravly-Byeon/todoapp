<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/main.css">
    <title>Hello, world!</title>
</head>
<body>
<%- include('nav.html')  %>>

    <h4 class="ml-2 mr-3 text-center">할 일 목록</h4>
    <div class="container input-group mb-2">
        <input class="form-control" id="search-input">
        <button id="search" class="input-group-append btn btn-secondary">검색</button>
    </div>
    <div class="container">
        <ul class="list-group">
            <% for (var i = 0; i<posts.length; i++){ %>
                <li class="list-group-item">
                    <input type="hidden" class="num" value="<%=posts[i]._id %>">
                    <p>글 번호 : <%= posts[i]._id %></p>
                    <a href="/detail/<%=posts[i]._id%>"><h4>할 일 제목 : <%= posts[i].title %></h4></a>
                    <p>할 일 마감날짜 : <%= posts[i].date %></p>
                    <button class="btn btn-info delete" data-id="<%= posts[i]._id %>">삭제</button>
                    <button class="btn btn-success edit" data-id="<%= posts[i]._id %>">수정</button>
                    <button class="btn btn-warning chat" data-id="<%= posts[i].writer %>">채팅</button>
                </li>
            <% } %>
        </ul>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>

        $('.delete').click(function(e){
            var num = e.target.dataset.id;
            var clk = $(this);
            console.log(num);
        
            $.ajax({
                method : 'DELETE',
                url : '/delete',
                data : {_id : num}
            }).done(function(result){
                console.log('성공!');
                clk.parent('li').fadeOut();
            }).fail(function(xhr, textStatus, errorThrown){
                console.log('실패');
                console.log(xhr, textStatus, errorThrown);
            });
        });

        $('.edit').click(function(e){
            var num = e.target.dataset.id;
            location.href='/edit/'+num;
        });

        $('#search').click(function(){
            window.location.replace('/search?value=' + $('#search-input').val());
        });

        $('.chat').click(function(e){
            var num = e.target.dataset.id;
            location.href='/chatRoom/'+num;
        });
   </script>



